<div class="row">
  <div class="page-header text-center">
    <%= image_tag @vendor.image.url(:large), class: 'image-responsive', alt: @vendor.title + ' Logo' %>
    <h1><%= @vendor.title %> <small>Ürünleri</small></h1>
  </div>
  <div class="col-md-12">
    <ol class="breadcrumb">
      <li><%= link_to 'Ana Sayfa', root_path %></li>
      <% if @category.root? %>
        <li class="active"><%= @category.name %></li>
      <% else %>  
        <% @category.ancestors.each do |ancestor| %>
          <li><%= link_to ancestor.name, category_path(vendor_id: @vendor.id, id: ancestor.id) %></li>
        <% end %>
        <li class="active"><%= @category.name %></li>
      <% end %>      
    </ol>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-4">
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
      <% @category.children.each do |child| %>
        <div class="panel panel-default">
          <div class="panel-heading" role="tab" id="headingOne">
            <h4 class="panel-title">
              <a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= child.id %>" aria-expanded="false" aria-controls="<%= child.id %>">
                <%= child.name %>
              </a>
            </h4>
          </div>
          <div id="<%= child.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
            <ul class="list-group">
              <% child.children.each do |sub_node|  %>
                <li class="list-group-item">
                  <%= link_to sub_node.name, category_path(vendor_id: @vendor.id, id: sub_node.id) %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-8">
    
  </div>
</div>